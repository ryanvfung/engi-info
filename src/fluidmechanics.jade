  include ../inc/head.jade
  body
    include ../inc/header.jade
    div#main-wrapper: main(role='main')
      include ../inc/latex-declarations.jade

      section
        h1#definitions Definitions
        include ../inc/thermofluid-quantities.jade

        h2#dimensionless-numbers Dimensionless numbers
        dl
          dt Reynolds number
          dd Ratio of the inertial forces to viscous forces in fluid flow.
          dd \[ \mathrm{Re} = \frac{\rho v l}{\mu} = \frac{vl}{\nu} \]
          dt Mach number
          dd Ratio of the velocity to the speed of sound in a fluid.
          dd \[ \mathrm{Ma} = \frac{v}{a} \]

        h2#terminology Terminology
        dl
          dt Fully developed flow
          dd No change over distance except pressure change remains constant.
          dd \[ \ddx{}{x}(X) = 0 \quad , \quad \ddx{P}{x}= \mathrm{const} \]

          dt Steady flow
          dd No change of variables over time.
          dd \[ \ddx{}{t}(X) = 0 \]

          dt Uniform flow
          dd No change of variables over space.
          dd \[ \ddx{}{x}(X) = 0 \quad , \quad \ddx{}{y}(X) = 0 \quad , \quad \ddx{}{z}(X) = 0 \]

          dt Incompressible flow
          dd No change in density over time.
          dd \[ \frac{\mathrm{D} \rho}{\mathrm{D} t} = 0 \]

          dt Inviscid flow
          dd Viscosity and viscous effects are ignored.



