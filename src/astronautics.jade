- var subtitle = 'Astronautics';
- var home = '.';


doctype html
html(lang='en')
  include ../inc/head.jade
  body
    include ../inc/header.jade
    div#main-wrapper: main(role='main')
      include ../inc/latex-declarations.jade



      section
        h1#definitions Definitions
        table.c-quantity-table
          thead
            tr
              th Symbol
              th Quantity
              th Units
          tbody
            tr
              td: var M
              td Mass
              td kg
            tr
              td: var M#[sub 0]
              td Initial mass
              td kg
            tr
              td: var M#[sub b]
              td Burnout mass
              td kg
            tr
              td: var V
              td Velocity
              td m s#[sup &minus;1]
            tr
              td: var V#[sub ex]
              td Exhaust velocity
              td m s#[sup &minus;1]



      section
        h1#rocket-equation The rocket equation
        p \[ \ddx{V}{t} = -V_{ex} \frac{1}{M} \ddx{M}{t} \]
        p \[ \Delta V = V_{ex} \ln{\left(\frac{M_0}{M_b}\right)} \]


    include ../inc/footer.jade
